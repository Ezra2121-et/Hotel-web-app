generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Room {
  id          Int       @id @default(autoincrement())
  name        String
  type        String // "standard" | "deluxe" | "suite"
  price       Float
  capacity    Int
  description String
  imageUrl    String?
  available   Boolean   @default(true)
  bookings    Booking[]
}

model Booking {
  id        Int      @id @default(autoincrement())
  room      Room     @relation(fields: [roomId], references: [id])
  roomId    Int
  guestName String
  email     String
  phone     String
  checkIn   DateTime
  checkOut  DateTime
  status    String   @default("pending") // pending | confirmed | cancelled
  createdAt DateTime @default(now())
}

model MenuItem {
  id          Int     @id @default(autoincrement())
  name        String
  category    String // "breakfast" | "lunch" | "dinner" | "drinks"
  price       Float
  description String
  imageUrl    String?
}

model ContactMessage {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  message   String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Admin {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String // bcrypt hashed
}
