{
    "name": "hotel-web-app-root",
    "private": true,
    "scripts": {
        "dev:frontend": "pnpm --filter hotel-web-app dev",
        "dev:backend": "pnpm --filter backend dev",
        "dev": "npx concurrently \"pnpm dev:frontend\" \"pnpm dev:backend\"",
        "build:frontend": "pnpm --filter hotel-web-app build",
        "backend:push": "pnpm --filter backend db:push",
        "backend:seed": "pnpm --filter backend db:seed"
    },
    "pnpm": {
        "overrides": {
            "vite": "^8.0.0-beta.13"
        }
    },
    "devDependencies": {
        "concurrently": "^9.1.2"
    }
}